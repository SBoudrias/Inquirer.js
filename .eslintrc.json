{
  "extends": ["xo", "prettier"],
  "env": {
    "mocha": true,
    "jest": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "default-param-last": "off",
    "padding-line-between-statements": "off",
    "no-eq-null": "off",
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "prettier/prettier": "error"
  },
  "plugins": ["@typescript-eslint", "prettier"]
}
