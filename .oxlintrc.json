{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": {
    "node": true
  },
  "ignorePatterns": [
    ".git",
    "node_modules",
    "coverage",
    ".yarn",
    "packages/*/dist/**",
    "packages/*/node_modules/**",
    "packages/*/__snapshots__/**"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error"
  },
  "rules": {
    "no-await-in-loop": "off"
  }
}
