{
  "name": "isolate-monorepo-package",
  "version": "1.0.0",
  "private": true,
  "description": "Tool for testing package isolation in Yarn workspace monorepo",
  "bin": "./src/bin.ts",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "tsc": "tsc && chmod +x ./dist/bin.js"
  },
  "dependencies": {
    "type-fest": "^5.2.0"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24"
  }
}
