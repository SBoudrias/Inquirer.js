{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "main/",
    "sourceMap": false,
    "declaration": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
