{
  "extends": "@sindresorhus/tsconfig/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "declaration": false,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules"],
  "include": ["packages"]
}
