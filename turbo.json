{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "tsc": {
      "dependsOn": ["^tsc"],
      "outputs": ["dist/**"],
      "inputs": ["../../package.json", "package.json", "src/*", "!**/*.test.ts"]
    },
    "test": {
      "dependsOn": ["^tsc"],
      "outputs": []
    },
    "demo": {
      "dependsOn": ["^tsc"],
      "persistent": true,
      "cache": false,
      "interruptible": true
    }
  }
}
