{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "attw": {
      "dependsOn": ["tsc"],
      "outputs": []
    },
    "tsc": {
      "dependsOn": ["^tsc"],
      "outputs": ["dist/**"],
      "inputs": ["tsconfig.json", ".tshy/**", "src/**"]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "$TURBO_ROOT$/.oxlintrc.json",
        "$TURBO_ROOT$/.prettierrc.mjs",
        "$TURBO_ROOT$/.prettierignore"
      ]
    }
  }
}
